.container {
  position: relative;
  width: 100%;
  background-color: #f1f1f0;
}
.container .tisi {
  padding: 20rpx 20rpx;
  background: #e79702;
  background: linear-gradient(to right, #e79702, #fc5406);
  color: #fff;
  font-size: 28rpx;
}
.container .content {
  background: linear-gradient(to right, #f10404, #ce0404);
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0 0 0;
  position: relative;
}
.container .content .content-h1 {
  font-size: 30rpx;
  color: #fff;
}
.container .content .content-h2 {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 30rpx 0;
}
.container .content .content-list {
  display: flex;
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx 0;
}
.container .content .content-list .content-list-li {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  border-left: 1px solid rgba(255, 255, 255, 0.4);
}
.container .content .content-list .content-list-li .span1 {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}
.container .content .content-list .content-list-li .span2 {
  font-size: 28rpx;
  color: #fff;
}
.container .content image {
  position: absolute;
  z-index: 10;
  width: 50rpx;
  height: auto;
  right: 20rpx;
  top: 20rpx;
}
.container .list-title {
  font-size: 35rpx;
  background: #f1f1f1;
  border-bottom: 1px solid #e8e8e8;
  padding: 20rpx;
}
.container .list {
  background: #fff;
  padding: 0rpx 20rpx;
}
.container .list .list-li {
  display: flex;
  padding: 20rpx 0;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
}
.container .list .list-li .list-li-left {
  font-size: 30rpx;
}
.container .list .list-li .list-li-right .span1 {
  font-size: 35rpx;
  color: #fc5406;
}
.container .list .list-li .list-li-right .span2 {
  font-size: 30rpx;
  color: #ccc;
  margin-top: 10rpx;
}
.container .bottom-btn {
  position: fixed;
  bottom: 0;
  display: flex;
  z-index: 10;
  width: 100%;
}
.container .bottom-btn .bottom-btn-left {
  width: 30%;
  text-align: center;
  background: #fff;
  border-radius: 0;
  border: 0;
  font-size: 30rpx;
  line-height: 100rpx;
}
.container .bottom-btn .bottom-btn-right {
  width: 70%;
  background: var(--background);
  border-radius: 0;
  border: 0;
  position: relative;
  color: #fff;
}
.container modal {
  padding: 20rpx;
}
.container modal .model-view {
  display: flex;
  align-items: center;
  margin-top: 20px;
}
.container modal .model-view input {
  border: 1px solid #c4c4c4;
  width: 300rpx;
  padding: 8rpx 10rpx;
  font-size: 30rpx;
}
.container modal .model-view text {
  color: #222;
  font-size: 30rpx;
}
.container modal .model-view radio-group {
  display: flex;
}
.container modal .model-view radio-group text {
  color: #222;
  font-size: 26rpx;
}
.container modal .model-view radio-group radio {
  margin-right: 15rpx;
  margin-left: 10rpx;
}
